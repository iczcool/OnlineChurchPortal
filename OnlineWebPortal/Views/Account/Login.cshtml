@model OnlineWebPortal.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

    <style>
        .form-wrapper{
            width: 40%;
            margin: 0 auto;
        }

        /*// Small devices (landscape phones, 576px and up)*/
        @@media (max-width: 575px){
            .form-wrapper{
                width: 100%;
                margin: 0 auto;
            }
        }
        @@media (min-width: 576px) {
            .form-wrapper{
                width: 80%;
                margin: 0 auto;
            }
        }

        /*// Medium devices (tablets, 768px and up)*/
        @@media (min-width: 768px) {
            .form-wrapper{
            width: 70%;
            margin: 0 auto;
        }
        }

        /*// Large devices (desktops, 992px and up)*/
        @@media (min-width: 992px) {.form-wrapper{
            width: 50%;
            margin: 0 auto;
        }
        }

        /*// Extra large devices (large desktops, 1200px and up)*/
        @@media (min-width: 1200px) {
            .form-wrapper{
            width: 45%;
            margin: 0 auto;
        }
        }

    </style>
            <h3>Curuch Login</h3>
            <div class="form-wrapper row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @if (TempData["message"] != null)
                    {
                        <p class="alert alert-success alert-dismissible fade show text-center">@TempData["message"]</p>
                    }
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Username</label>
                        <input asp-for="UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="RememberMe" class="control-label"></label>
                        <input type="checkbox" asp-for="RememberMe" class="form-check-inline ml-lg-4" />
                    </div>

                    <div class="form-group">
                        <input asp-controller="" asp-action="" type="submit" value="Log in" class="btn btn-danger " />
                    </div>

                    <div asp-validation-summary="All"></div>

                    <br />
                    <div>@ViewData["message"]</div>

                    <p>Are you a new member?</p>
                    <a asp-controller="Account" asp-action="Register">
                        Create New Account
                    </a>
                </form>
                </div>
            </div>

            

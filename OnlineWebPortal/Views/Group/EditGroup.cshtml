@model OnlineWebPortal.Models.ChurchGroup

@{
    ViewData["Title"] = "Edit Group";
}

<h1>Edit Group Information</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupDescription" class="control-label"></label>
                <input asp-for="GroupDescription" class="form-control" />
                <span asp-validation-for="GroupDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingDay" class="control-label"></label>
                <input asp-for="MeetingDay" class="form-control" />
                <span asp-validation-for="MeetingDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaderName" class="control-label"></label>
                <input asp-for="LeaderName" class="form-control" />
                <span asp-validation-for="LeaderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaderProfile" class="control-label"></label>
                <input asp-for="LeaderProfile" class="form-control" />
                <span asp-validation-for="LeaderProfile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Group" asp-action="FindGroup">Cancel</a>
</div>


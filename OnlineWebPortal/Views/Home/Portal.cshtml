        <h1>Welcome to your portal, @User.Identity.Name</h1>
        

        
            <div id="verse" class="">
                <p>
                    <i>
                        "For the wrath of God is revealed from heaven against all ungodliness and
                        unrighteousness of men, who by their unrighteousness suppress the truth. For what can be known about God
                        is plain to them, because God has shown it to them. For his invisible attributes, namely, his eternal
                        power and divine nature, have been clearly perceived, ever since the creation of the world, in the things
                        that have been made. So they are without excuse."
                    </i>
                    <b>  Romans 1:18-20</b>
                </p>
            </div>

        @if (TempData["message"] != null)
        {
            <p class="alert alert-success alert-dismissible fade show text-center">@TempData["message"]</p>
        }
        <div>@ViewData["message"]</div>
                <div class="tile-nav col-sm-12">
                    <ul>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="tile-1">
                                <a asp-controller="User" asp-action="Users">
                                    <span><i class="fa fa-users"></i></span>
                                    <p>List Of Members</p>
                                </a>
                            </li>
                         }
                        <li class="tile-2">
                            <a asp-controller="User" asp-action="UserProfile" asp-route-id="@Model.ID">
                                <span><i class="fa fa-user"></i></span>
                                <p>Your Profile</p>
                            </a>
                        </li>
                        <li class="tile-3">
                            <a asp-controller="Group" asp-action="FindGroup">
                                <span><i class="fa fa-search"></i></span>
                                <p>Church Groups</p>
                            </a>
                        </li>
                        <li class="tile-4">
                            <a asp-controller="Group" asp-action="UserChurchGroups" asp-route-id="@Model.ID">
                                <span><i class="fa fa-trophy"></i></span>
                                <p>Your Groups</p>
                            </a>
                        </li>
                        <li class="tile-5">
                            <a asp-controller="Giving" asp-action="OnlineGiving" asp-route-id="@Model.ID">
                                <span><i class="fas fa-hand-holding-usd"></i></span>
                                <p>Giving</p>
                            </a>
                        </li>
                        <li class="tile-6">
                            <a asp-controller="Enquiry" asp-action="CreateEnquiry" asp-route-id="@Model.ID">
                                <span><i class="fa fa-envelope"></i></span>
                                <p>Enquiry</p>
                            </a>
                        </li>


                        <li class="tile-6">
                            <a asp-controller="Event" asp-action="EventList">
                                <span><i class="fas fa-calendar-alt"></i></span>
                                <p>Events</p>
                            </a>
                        </li>
                        <li class="tile-6">
                            <a asp-controller="" asp-action="" asp-route-id="@Model.ID">
                                <span><i class="fa fa-church"></i></span>
                                <p>Ministries</p>
                            </a>
                        </li>
                    </ul>
                </div>



               
@model OnlineWebPortal.Models.RegUser
@{
    ViewData["Title"] = "Portal Page";
}


    <style>

        .tile-nav span {
            font-size: 3em;
        }

        

        .tile-nav {
            position:relative;
            background: transparent;
            width: 100%;
            min-height: 80px;
            padding:0;
            text-align: center;
        }
        .tile-nav li {
            position:relative;
            display: inline-block;
            width: 30%;
            margin: 0 100px;
            padding: 0;
            border: 6px solid white;
        }
        .tile-nav li:hover {
            background:#ffffff;
        }
         .tile-nav li a{
             color:#FFB90F;
             margin: 100px 0;
         }
         .tile-nav p {
            font-size: 1.1em;
            color:#aaaaaa;
            color:#555555;
        }
         .tile-nav p:hover {        
            color:#808080;
        }
            .tile-nav li a:hover {
                text-decoration: none;
                color:darkorange;

            }
        #verse{
            position:relative;
            background: ;
            margin: 40px 0;
            padding:0 80px;
        }


